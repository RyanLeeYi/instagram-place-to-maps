# Telegram
TELEGRAM_BOT_TOKEN=your_food_bot_token
TELEGRAM_ALLOWED_CHAT_IDS=your_chat_id

# Whisper 本地模型設定
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu

# Ollama 本地 LLM 設定
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_VISION_MODEL=minicpm-v

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Webhook 設定
WEBHOOK_URL=https://food.yourdomain.com

# 系統設定
TEMP_VIDEO_DIR=./temp_videos
DATABASE_URL=sqlite+aiosqlite:///./food_places.db

# ===== Google Maps 自動儲存設定 =====
# 是否啟用自動儲存至 Google Maps 清單
GOOGLE_MAPS_SAVE_ENABLED=false

# 預設儲存的清單名稱
GOOGLE_MAPS_DEFAULT_LIST=想去

# Playwright 瀏覽器狀態儲存路徑
PLAYWRIGHT_STATE_PATH=./browser_state

# 自動化操作延遲（秒），用於避免被偵測
PLAYWRIGHT_DELAY_MIN=2.0
PLAYWRIGHT_DELAY_MAX=5.0
